<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cal="http://www.caliburnproject.org"
                    xmlns:conv="clr-namespace:PingPong.Converters"
                    xmlns:ctrl="clr-namespace:PingPong.Controls"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
                    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d">

    <SolidColorBrush x:Key="ScreenNameTextBrush" Color="#FFBE7C44" />
    <SolidColorBrush x:Key="ScreenNameBorderBrush" Color="#FF272D45" />
    <SolidColorBrush x:Key="ScreenNameBackgroundBrush" Color="#FF1B1B1B" />
    <SolidColorBrush x:Key="TweetTextBrush" Color="#FF9B9B9B" />
    <SolidColorBrush x:Key="TweetTextBorderBrush" Color="#FF393939" />
    <SolidColorBrush x:Key="TweetTextBackgroundBrush" Color="#FF212121" />
    <SolidColorBrush x:Key="DateTextBrush" Color="#FFA5784B" />
    <SolidColorBrush x:Key="DateBorderBrush" Color="#FF2D2D2D" />
    <SolidColorBrush x:Key="DateBackgroundBrush" Color="#FF141414" />
    <SolidColorBrush x:Key="ImageBorderBrush" Color="#FF3F3F3F" />

    <conv:RelativeTimeConverter x:Key="RelativeTimeConverter" />
    <conv:SourceToUriConverter x:Key="SourceToUriConverter" />
    <conv:SourceToContentConverter x:Key="SourceToContentConverter" />

    <Style x:Key="DarkTweetButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="30" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Margin" Value="2,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="#FF1B1B1B" CornerRadius="5">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0:0:0.1" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation d:IsOptimized="True" Storyboard.TargetName="border" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FF292929" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                            <DiscreteObjectKeyFrame KeyTime="0">
                                                <DiscreteObjectKeyFrame.Value>
                                                    <Thickness>2</Thickness>
                                                </DiscreteObjectKeyFrame.Value>
                                            </DiscreteObjectKeyFrame>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground" Value="#FFB1B1B1" />
    </Style>

    <DataTemplate x:Key="DarkTweetDataTemplate">
        <Grid Margin="2,5,8,5" d:DataContext="{d:DesignData /SampleData/TweetSampleData.xaml}" d:DesignHeight="78" d:DesignWidth="356">
            <Grid.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
                    <Setter Property="Foreground" Value="LightGray" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <VisualStateManager.CustomVisualStateManager>
                <ei:ExtendedVisualStateManager />
            </VisualStateManager.CustomVisualStateManager>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualStateGroup.Transitions>
                        <VisualTransition GeneratedDuration="0:0:0.15" />
                    </VisualStateGroup.Transitions>
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <DoubleAnimation d:IsOptimized="True"
                                             Duration="0"
                                             Storyboard.TargetName="actions"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="1" />
                            <DoubleAnimation d:IsOptimized="True"
                                             Duration="0"
                                             Storyboard.TargetName="viaLink"
                                             Storyboard.TargetProperty="(UIElement.Opacity)"
                                             To="0" />
                            <DoubleAnimation d:IsOptimized="True"
                                             Duration="0"
                                             Storyboard.TargetName="actions"
                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                                             To="0">
                                <DoubleAnimation.EasingFunction>
                                    <ExponentialEase EasingMode="EaseInOut" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="Normal" />
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseEnter">
                    <ei:GoToStateAction StateName="MouseOver" />
                </i:EventTrigger>
                <i:EventTrigger EventName="MouseLeave">
                    <ei:GoToStateAction StateName="Normal" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <Grid Margin="0,5,0,0" VerticalAlignment="Top">
                <Border Background="#55000000" CornerRadius="4">
                    <Border.RenderTransform>
                        <CompositeTransform TranslateX="3" TranslateY="2" />
                    </Border.RenderTransform>
                </Border>
                <Border VerticalAlignment="Top" CornerRadius="4">
                    <Border.Clip>
                        <RectangleGeometry RadiusX="4" RadiusY="4" Rect="0,0,52,48" />
                    </Border.Clip>
                    <Image Width="48" Height="48" Source="{Binding ProfileImgUrl}" />
                </Border>
                <Border Height="48"
                        VerticalAlignment="Top"
                        BorderBrush="{StaticResource ImageBorderBrush}"
                        BorderThickness="1,1,0,1"
                        CornerRadius="4,0,0,4" />
            </Grid>

            <Grid Grid.Column="1" Grid.ColumnSpan="2" MinHeight="67">
                <Border Background="#33000000" CornerRadius="7">
                    <Border.RenderTransform>
                        <CompositeTransform TranslateX="3" TranslateY="3" />
                    </Border.RenderTransform>
                </Border>
                <Border Background="{StaticResource TweetTextBackgroundBrush}" BorderBrush="{StaticResource TweetTextBorderBrush}" BorderThickness="1" CornerRadius="7">
                    <ctrl:TweetTextBlock Margin="0,0,0,10"
                                         FontFamily="{StaticResource DefaultFontFamily}"
                                         FontSize="12"
                                         Foreground="{StaticResource TweetTextBrush}"
                                         ScreenName="{Binding ScreenName}"
                                         Text="{Binding Text}" />
                </Border>
            </Grid>

            <Grid Grid.Column="1" Margin="-10,-3,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Border Background="#55000000" CornerRadius="5">
                    <Border.RenderTransform>
                        <CompositeTransform TranslateX="2" TranslateY="2" />
                    </Border.RenderTransform>
                </Border>
                <Border Background="{StaticResource ScreenNameBackgroundBrush}" BorderBrush="{StaticResource ScreenNameBorderBrush}" BorderThickness="1" CornerRadius="4">
                    <TextBlock Margin="5,2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               FontFamily="Ubuntu Light"
                               FontSize="13"
                               Foreground="{StaticResource ScreenNameTextBrush}"
                               Text="{Binding ScreenName}" />
                </Border>
            </Grid>

            <HyperlinkButton x:Name="viaLink"
                             Grid.Row="0"
                             Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Margin="10,0,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Bottom"
                             Content="{Binding Source, Converter={StaticResource SourceToContentConverter}}"
                             FontSize="9"
                             Foreground="#FF6A6A6A"
                             NavigateUri="{Binding Source, Converter={StaticResource SourceToUriConverter}}" />
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Grid.ColumnSpan="2"
                       Margin="0,0,10,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       FontSize="10"
                       Foreground="{StaticResource DateTextBrush}"
                       Text="{Binding CreatedAt, Converter={StaticResource RelativeTimeConverter}}" />

            <Grid x:Name="actions"
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Margin="10,0,0,-3"
                  Opacity="0"
                  RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <CompositeTransform TranslateY="30" />
                </Grid.RenderTransform>
                <StackPanel VerticalAlignment="Bottom" cal:Bind.Model="{StaticResource router}" Orientation="Horizontal">
                    <Button Content="R" Style="{StaticResource DarkTweetButtonStyle}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="Reply">
                                    <cal:Parameter Value="{Binding DataContext, ElementName=actions}" />
                                </cal:ActionMessage>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Button Content="RT" Style="{StaticResource DarkTweetButtonStyle}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="Retweet">
                                    <cal:Parameter Value="{Binding DataContext, ElementName=actions}" />
                                </cal:ActionMessage>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                    <Button Content="Q" Style="{StaticResource DarkTweetButtonStyle}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <cal:ActionMessage MethodName="Quote">
                                    <cal:Parameter Value="{Binding DataContext, ElementName=actions}" />
                                </cal:ActionMessage>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </DataTemplate>
    <Style x:Key="DarkTweetsPanel" TargetType="ItemsControl">
        <Setter Property="Background" Value="#FF181818" />
        <Setter Property="VirtualizingStackPanel.VirtualizationMode" Value="Recycling" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ScrollViewer Margin="0" Background="{TemplateBinding Background}" Style="{StaticResource ScrollViewerStyle}" VerticalScrollBarVisibility="Visible">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate" Value="{StaticResource DarkTweetDataTemplate}" />
    </Style>
</ResourceDictionary>
