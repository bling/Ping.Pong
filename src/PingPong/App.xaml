<Application x:Class="PingPong.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PingPong"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/ScrollViewer.xaml" />
                <ResourceDictionary Source="Assets/ToolBar.xaml" />
                <ResourceDictionary Source="Assets/SimpleTweetsPanel.xaml" />
                <ResourceDictionary Source="Assets/MetroTweetsPanel.xaml" />
                <ResourceDictionary Source="Assets/DarkTweetsPanel.xaml" />
                <ResourceDictionary Source="Assets/BusyIndicatorStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="DefaultFontFamily">Segoe UI Light</FontFamily>
            <local:AppBootstrapper x:Key="bootstrapper" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
